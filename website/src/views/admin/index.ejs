<!DOCTYPE html>
<html lang="en">


<%- include ('includes/header'); %>


  <body>
    <div class="container-scroller">
      <%- include ('includes/sidebar'); %>
        <div class="container-fluid page-body-wrapper">
          <%- include ('includes/navbar'); %>


            <!-- main-panel starts -->
            <div class="main-panel">

              <div class="content-wrapper">
                <div class="page-header">
                  <h3 class="page-title"> See The Status Of Your Products</h3>

                </div>
                <div class="row">
                  <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                      <div class="card-body">
                        <h4 class="card-title">Top 3 products</h4>

                        <div class="table-responsive">
                          <table class="table table-dark">
                            <thead>
                              <tr>
                                <th> # </th>
                                <th> Fruits </th>
                                <th> Amount </th>
                                <th> Date </th>
                                <th> options </th>
                              </tr>
                            </thead>
                            <tbody>
                              <% topProducts.forEach(function(item,index) { %>
                                <tr id="product_<%= item._id %>">
                                  <td>
                                    <%= index + 1 %>
                                  </td>
                                  <td>
                                    <%= item.name %>
                                  </td>
                                  <td>$ <%= item.price.toFixed(2) %>
                                  </td>
                                  <td>
                                    <%= item.date %>
                                  </td>
                                  <td>
                                    <button type="button" class="btn btn-danger btn-sm"
                                      onclick="deleteProduct('<%= item._id %>')">Delete</button>
                                  </td>
                                </tr>
                                <% }); %>
                            </tbody>
                          </table>
                        </div>
                        <div class="d-flex justify-content-center pt-4 ">
                          <a href="/admin/top3">
                            <button type="button" class="btn btn-success btn-md">Add +</button>
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>



            </div>
            <!-- main-panel ends -->
        </div>
    </div>
    <script>
      function deleteProduct(productId) {
        if (confirm("Are you sure you want to delete this product?")) {
          fetch(`/products/${productId}`, {
            method: 'DELETE'
          })
            .then(response => {
              if (response.ok) {
                // Remove the product row from the table
                document.getElementById(`product_${productId}`).remove();
              } else {
                console.error('Error deleting product');
              }
            })
            .catch(error => {
              console.error('Error deleting product:', error);
            });
        }
      }

    </script>
    <%- include ('includes/footer'); %>
  </body>

</html>